<section id="contact" class="container mx-auto flex md:flex-row flex-col flex-wrap justify-evenly md:mt-10 md:mb-20">
    <div class="w-full">
        <h2>Contact</h2>
    </div>
    <div class="md:w-4/12 mb-10 md:mb-0 py-10 md:py-0 flex items-center justify-start bg-lightblue">
        <h3 class="text-white text-2xl px-10">Get in contact to learn more and schedule an introductory call.</h3>
    </div>
    <form
        name="contact"
        netlify-honeypot="bot-field"
        action="/contact-success"
        method="POST"
        data-netlify="true"
        class="md:w-8/12">
        <p class="hidden">
            <label>Don’t fill this out if you’re human: <input name="bot-field"/></label>
        </p>
        <div class="flex flex-row flex-wrap md:w-full w-screen px-10">
            <div class="flex justify-around flex-col md:flex-row md:w-full w-screen">
                <div class="w-full md:w-1/2 flex flex-col md:flex-row mb-6">
                    <input
                        type="text"
                        name="name"
                        class="flex-auto border-r-1 border-l-2 border-t-2 border-b-2 focus:border-darkblue py-3 px-5 w-full"
                        placeholder="Your Name:"
                        required="required"/>
                </div>
                <div class="w-full md:w-1/2 flex flex-col md:flex-row mb-6">
                    <input
                        type="email"
                        name="email"
                        class="flex-auto border-l-1 border-b-2 border-t-2 border-r-2 focus:border-darkblue py-3 px-5 w-full"
                        placeholder="Your Email:"
                        required="required"/>
                </div>
            </div>
            <div class="w-screen md:w-full flex flex-row mb-6">
                <textarea
                    name="message"
                    class="flex-auto w-3/4 border-2 focus:border-darkblue py-3 px-5 resize-none"
                    placeholder="How can we help?"
                    required="required"></textarea>
            </div>
        </div>
        <div class="w-screen md:w-full flex px-10">
            <button
                type="submit"
                class="flex-auto border-2 border-darkblue hover:bg-darkblue hover:text-white py-3 transition-colors duration-75
                    ease-linear">
                Get in Touch</button>
        </div>
    </form>
</section>